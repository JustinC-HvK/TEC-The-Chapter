<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/login.css" />

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/carousel/">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min1.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/carousel.css" rel="stylesheet">
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/product/">

    <!-- Custom styles for this template -->
    <link href="~/css/product.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/album.css" rel="stylesheet">
    <style>
        body {
            font-family: "Times New Roman", Georgia, Serif;
            padding-top: 200px;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: "Playfair Display";
            letter-spacing: 5px;
        }
    </style>
    <style>
        h1 {
            text-align: center;
        }

        h2 {
            text-align: center;
            font-size: 15px;
        }


        form {
            width: auto;
            margin: auto;
        }

        select {
            max-width: 180px;
            min-width: 180px;
            width: 180px !important;
            text-align-last: center;
        }

        .ResClass {
            max-width: auto;
            min-width: auto;
            width: 180px !important;
            text-align-last: center;
            margin-left: 110px;
            margin-right: auto;
            text-align: center;
        }

        .Timepick {
            max-width: 180px;
            min-width: 180px;
            width: 180px !important;
            text-align-last: center;
            margin-left: 110px;
            margin-right: auto;
            text-align: center;
        }

        .info {
            margin: auto;
            text-align: center;
        }

        .button {
            text-align: center;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-warning navbar navbar-inverse navbar-expand-sm navbar-toggleable-sm navbar box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/images/The_chaptere.jpg" alt="HTML5 Icon" style="width:128px;height:128px;"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item w3-bar-item w3-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item w3-bar-item w3-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Aboutus">About Us</a>
                        </li>

                        <li class="nav-item w3-bar-item w3-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Secured">Reservations</a>
                        </li>
                        <li class="nav-item">

                        <li class="nav-item w3-bar-item w3-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Menu">Menu</a>
                        </li>
                        
                        <li class="nav-item w3-bar-item w3-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>


                        <li class="nav-item w3-bar-item w3-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item w3-bar-item w3-button">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted ">
        <div class="container">
            &copy; 2021 - All Rights Reserved by Tec Media Company - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy and Concerns</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
