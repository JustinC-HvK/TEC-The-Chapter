


@model WebApplication2.Models.ResClass

@{
    ViewData["Title"] = "Reservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Document</title>
</head>
<body>
    
    @using (Html.BeginForm())
    {


        <br />
        <br />
        <br />

        <h2>Date</h2>
        @Html.TextBoxFor(model => model.Date, new { @class = "ResClass" })
        <br />
        <h2>Time</h2>
        @Html.TextBoxFor(model => model.Time, new { @class = "Timepick" })

        <div class="button">
            <h2>Party Size</h2>
            <select name="party_size" required="">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
            </select>
        </div>
        <div class="button">
            <h2>What is the Occasion</h2>
            <select name="occasion" required="">
                <option value="Birthday">Birthday</option>
                <option value="Business Meal">Business Meal</option>
                <option value="Date Night">Date Night</option>
                <option value="Get Together">Friends' get together</option>
                <option value="SpecialOccasion">Special Occasion</option>
            </select>
        </div>
        <br />
        <div class="button">
            <input type="submit" name="submit" value="Reserve Your Table" />
        </div>
    }

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
        <link rel="stylesheet" href="/resources/demos/style.css" />
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>

        <script>
            $(".ResClass").datepicker({
                dateFormat: "dd-mm-yy",
                changeMonth: true,
                changeYear: true,
                minDate: "+1d",
                defaultTime: "+1d",
            });
            $('.Timepick').timepicker({
                timeFormat: 'h:mm p',
                interval: 30,
                minTime: '6:00pm',
                maxTime: '10:00pm',
                defaultTime: '6:00pm',
                dynamic: false,
                dropdown: true,
                scrollbar: true
            });
        </script>
    }

</body>
</html>
