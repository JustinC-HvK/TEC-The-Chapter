@{ var returnUrl = ViewData["ReturnUrl"] as string;
                var error = TempData["Error"] as string; }

<h1>Please Login To View Reservations</h1>
<h1>User Login</h1>


@if (!string.IsNullOrEmpty(error))
{
<h2 class="alert-danger" style="padding:20px;">@error</h2>            }





<div class="row">
    <div class="col-md-12">
        <form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
            <div class="form-group">
                <input type="text" name="username" placeholder="Username" required="" />
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Password" required="" />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <button type="button" class="btn btn-primary">Forgot Password</button>
            <button type="button" class="btn btn-primary">Create An Account</button>
        </form>



    </div>

</div>