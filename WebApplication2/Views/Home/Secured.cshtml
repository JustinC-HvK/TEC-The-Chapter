@model WebApplication2.Models.ResClass

@{
    ViewData["Title"] = "Reservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <style>
        h1 {
            text-align: center;
        }

        h2 {
            text-align: center;
            font-size: 15px;
        }


        form {
            width: 400px;
            margin: auto;
        }

        select {
            max-width: 180px;
            min-width: 180px;
            width: 180px !important;
            text-align-last: center;
        }

        .ResClass {
            max-width: 180px;
            min-width: 180px;
            width: 180px !important;
            text-align-last: center;
            margin-left: 110px;
            margin-right: auto;
            text-align: center;
        }

        .Timepick {
            max-width: 180px;
            min-width: 180px;
            width: 180px !important;
            text-align-last: center;
            margin-left: 110px;
            margin-right: auto;
            text-align: center;
        }

        .info {
            margin: auto;
            text-align: center;
        }

        .button {
            text-align: center;
        }
    </style>


    <h2>Name For Booking</h2>
    <input type="text" name="resname" placeholder="Your Name Here" required="" />
    
    //jquery datepicker.
    <h2>Date</h2>
    <input name="aDate" id="datepicker" type="text"  class="ResClass"/>

    /*@Html.TextBoxFor(model => model.Date, new { @class = "ResClass" })*/
    <br />
    //jquery timepicker.
    <h2>Time</h2>
    <input name="aTime" id="timepick" type="text" class="Timepick"/>

    /*@Html.TextBoxFor(model => model.Time, new { @class = "Timepick" })*/
    //select with party size max 8.
    <div class="button">
        <h2>Party Size</h2>
        <select name="party_size" required="">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
        </select>
    </div>
    <div class="button">
        <h2>What is the Occasion</h2>
        <select name="occasion" required="">
            <option value="Birthday">Birthday</option>
            <option value="Business Meal">Business Meal</option>
            <option value="Date Night">Date Night</option>
            <option value="Get Together">Friends' get together</option>
            <option value="SpecialOccasion">Special Occasion</option>
        </select>
    </div>
    <br />
    //Start function to add data to db
    <div class="button">
        <input type="submit" name="submit" value="Reserve Your Table" asp-action="ReservationBooking"/>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<!--linking to jquery files-->

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="/resources/demos/style.css" />
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <!--jquery js changing functions of the pickers-->
    <script>
        $("#datepicker").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true,
            minDate: "+1d",
            defaultTime: "+1d",
        });
        $('#timepick').timepicker({
            timeFormat: 'h:mm p',
            interval: 30,
            minTime: '6:00pm',
            maxTime: '10:00pm',
            defaultTime: '6:00pm',
            dynamic: false,
            dropdown: true,
            scrollbar: true
        });
    </script>
}
